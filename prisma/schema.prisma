// Schema Prisma para API FoodDidDo
// Baseado no schema SQL existente

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Tabela de restaurantes
model Restaurant {
  id          Int       @id @default(autoincrement())
  name        String    @db.VarChar(255)
  slug        String    @unique @db.VarChar(255)
  description String?   @db.Text
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")

  menus Menu[]

  @@map("restaurants")
}

// Tabela de categorias
model Category {
  id          Int       @id @default(autoincrement())
  name        String    @db.VarChar(100)
  slug        String    @unique @db.VarChar(100)
  description String?   @db.Text
  createdAt   DateTime  @default(now()) @map("created_at")

  recipes RecipeCategory[]

  @@map("categories")
}

// Tabela de tags
model Tag {
  id        Int       @id @default(autoincrement())
  name      String    @unique @db.VarChar(50)
  slug      String    @unique @db.VarChar(50)
  createdAt DateTime  @default(now()) @map("created_at")

  recipes RecipeTag[]

  @@map("tags")
}

// Tabela de receitas (entidade base)
model Recipe {
  id          Int       @id @default(autoincrement())
  name        String    @db.VarChar(255)
  slug        String    @unique @db.VarChar(255)
  description String?   @db.Text
  prepTime    Int?      @map("prep_time") // em minutos
  cookTime    Int?      @map("cook_time") // em minutos
  servings    Int?
  difficulty  String?   @db.VarChar(20) // easy, medium, hard
  imageUrl    String?   @map("image_url") @db.VarChar(500)
  viewCount   Int       @default(0) @map("view_count")
  isActive    Boolean   @default(true) @map("is_active")
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")

  versions        RecipeVersion[]
  ingredients     RecipeIngredient[]
  steps           RecipeStep[]
  categories      RecipeCategory[]
  tags            RecipeTag[]
  menuItems       MenuItem[]
  menuItemMetrics MenuItemMetric[]

  @@index([slug])
  @@index([isActive])
  @@index([viewCount(sort: Desc)])
  @@index([createdAt(sort: Desc)])
  @@index([isActive, viewCount(sort: Desc)])
  @@map("recipes")
}

// Tabela de versionamento de receitas
model RecipeVersion {
  id           Int       @id @default(autoincrement())
  recipeId     Int       @map("recipe_id")
  versionNumber Int      @map("version_number")
  name         String    @db.VarChar(255)
  description  String?   @db.Text
  prepTime     Int?      @map("prep_time")
  cookTime     Int?      @map("cook_time")
  servings     Int?
  difficulty   String?   @db.VarChar(20)
  createdAt    DateTime  @default(now()) @map("created_at")
  createdBy    Int?      @map("created_by")
  isCurrent    Boolean   @default(false) @map("is_current")

  recipe       Recipe    @relation(fields: [recipeId], references: [id], onDelete: Cascade)
  ingredients  RecipeIngredient[]
  steps        RecipeStep[]

  @@unique([recipeId, versionNumber])
  @@index([recipeId])
  @@index([isCurrent])
  @@index([recipeId, isCurrent])
  @@map("recipe_versions")
}

// Tabela de ingredientes
model Ingredient {
  id        Int       @id @default(autoincrement())
  name      String    @unique @db.VarChar(255)
  unit      String    @db.VarChar(50) // gramas, ml, unidades, etc
  createdAt DateTime  @default(now()) @map("created_at")

  recipeIngredients RecipeIngredient[]

  @@map("ingredients")
}

// Tabela de ingredientes da receita
model RecipeIngredient {
  id              Int       @id @default(autoincrement())
  recipeId        Int       @map("recipe_id")
  recipeVersionId Int?     @map("recipe_version_id")
  ingredientId    Int      @map("ingredient_id")
  quantity        Decimal   @db.Decimal(10, 2)
  unit            String    @db.VarChar(50)
  notes           String?   @db.Text
  createdAt       DateTime  @default(now()) @map("created_at")

  recipe          Recipe         @relation(fields: [recipeId], references: [id], onDelete: Cascade)
  recipeVersion   RecipeVersion? @relation(fields: [recipeVersionId], references: [id], onDelete: Cascade)
  ingredient      Ingredient     @relation(fields: [ingredientId], references: [id], onDelete: Cascade)

  @@index([recipeId])
  @@index([ingredientId])
  @@index([recipeId, recipeVersionId])
  @@map("recipe_ingredients")
}

// Tabela de passos da receita
model RecipeStep {
  id              Int       @id @default(autoincrement())
  recipeId        Int       @map("recipe_id")
  recipeVersionId Int?      @map("recipe_version_id")
  stepNumber      Int       @map("step_number")
  instruction     String    @db.Text
  imageUrl        String?   @map("image_url") @db.VarChar(500)
  createdAt       DateTime  @default(now()) @map("created_at")

  recipe          Recipe         @relation(fields: [recipeId], references: [id], onDelete: Cascade)
  recipeVersion   RecipeVersion? @relation(fields: [recipeVersionId], references: [id], onDelete: Cascade)

  @@unique([recipeId, recipeVersionId, stepNumber])
  @@index([recipeId])
  @@index([recipeId, recipeVersionId])
  @@index([recipeId, stepNumber])
  @@map("recipe_steps")
}

// Tabela de associação receita-categoria
model RecipeCategory {
  recipeId   Int @map("recipe_id")
  categoryId Int @map("category_id")

  recipe   Recipe   @relation(fields: [recipeId], references: [id], onDelete: Cascade)
  category Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  @@id([recipeId, categoryId])
  @@index([recipeId])
  @@index([categoryId])
  @@map("recipe_categories")
}

// Tabela de associação receita-tag
model RecipeTag {
  recipeId Int @map("recipe_id")
  tagId    Int @map("tag_id")

  recipe Recipe @relation(fields: [recipeId], references: [id], onDelete: Cascade)
  tag    Tag    @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@id([recipeId, tagId])
  @@index([recipeId])
  @@index([tagId])
  @@map("recipe_tags")
}

// Tabela de cardápios
model Menu {
  id          Int       @id @default(autoincrement())
  restaurantId Int     @map("restaurant_id")
  name        String    @db.VarChar(255)
  description String?   @db.Text
  isActive    Boolean   @default(true) @map("is_active")
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")

  restaurant Restaurant @relation(fields: [restaurantId], references: [id], onDelete: Cascade)
  items      MenuItem[]

  @@index([restaurantId])
  @@index([restaurantId, isActive])
  @@index([isActive])
  @@map("menus")
}

// Tabela de itens do cardápio
model MenuItem {
  id          Int       @id @default(autoincrement())
  menuId      Int       @map("menu_id")
  recipeId    Int       @map("recipe_id")
  price       Decimal?  @db.Decimal(10, 2)
  displayOrder Int      @default(0) @map("display_order")
  isAvailable Boolean   @default(true) @map("is_available")
  viewCount   Int       @default(0) @map("view_count")
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")

  menu            Menu              @relation(fields: [menuId], references: [id], onDelete: Cascade)
  recipe          Recipe            @relation(fields: [recipeId], references: [id], onDelete: Cascade)
  metrics         MenuItemMetric[]

  @@unique([menuId, recipeId])
  @@index([menuId])
  @@index([recipeId])
  @@index([isAvailable])
  @@index([displayOrder])
  @@index([menuId, isAvailable])
  @@map("menu_items")
}

// Tabela de métricas de acesso
model MenuItemMetric {
  id          Int      @id @default(autoincrement())
  menuItemId  Int      @map("menu_item_id")
  recipeId    Int      @map("recipe_id")
  restaurantId Int     @map("restaurant_id")
  accessDate  DateTime @map("access_date") @db.Date
  viewCount   Int      @default(1) @map("view_count")
  createdAt   DateTime @default(now()) @map("created_at")

  menuItem MenuItem @relation(fields: [menuItemId], references: [id], onDelete: Cascade)

  @@unique([menuItemId, accessDate])
  @@index([menuItemId])
  @@index([accessDate(sort: Desc)])
  @@index([menuItemId, accessDate(sort: Desc)])
  @@map("menu_item_metrics")
}
